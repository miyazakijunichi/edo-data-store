default: &default
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: {{ database_name }}
  pool: 5
  timeout: 5000
  username: {{ database_user }}
  password: {{ database_password }}
  host: {{ database_host }}

development:
  <<: *default

test:
  <<: *default
  database: {{ database_name }}_test

production:
  <<: *default
  database: {{ database_name }}_prod
